# ===============================================================================
# VoiceMock AI Interview Coach - EditorConfig
# https://editorconfig.org
# ===============================================================================

# Top-most EditorConfig file
root = true

# ===============================================================================
# Default settings for all files
# ===============================================================================
[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

# ===============================================================================
# Dart / Flutter files
# ===============================================================================
[*.dart]
indent_size = 2

# ===============================================================================
# Python files
# ===============================================================================
[*.py]
indent_size = 4

[*.pyi]
indent_size = 4

# ===============================================================================
# YAML files
# ===============================================================================
[*.{yml,yaml}]
indent_size = 2

# ===============================================================================
# JSON files
# ===============================================================================
[*.json]
indent_size = 2

# ===============================================================================
# Markdown files
# ===============================================================================
[*.md]
trim_trailing_whitespace = false
max_line_length = off

# ===============================================================================
# Shell scripts
# ===============================================================================
[*.sh]
indent_size = 2
end_of_line = lf

# ===============================================================================
# Batch files (Windows)
# ===============================================================================
[*.{cmd,bat}]
end_of_line = crlf

# ===============================================================================
# Docker files
# ===============================================================================
[Dockerfile*]
indent_size = 4

[docker-compose*.yml]
indent_size = 2

# ===============================================================================
# Configuration files
# ===============================================================================
[*.{conf,cfg,ini}]
indent_size = 2

# ===============================================================================
# Makefiles (require tabs)
# ===============================================================================
[Makefile]
indent_style = tab

[*.mk]
indent_style = tab

# ===============================================================================
# Build files
# ===============================================================================
[*.gradle]
indent_size = 4

[*.gradle.kts]
indent_size = 4

# ===============================================================================
# XML files (Android)
# ===============================================================================
[*.xml]
indent_size = 4

# ===============================================================================
# Properties files
# ===============================================================================
[*.properties]
indent_size = 2

# ===============================================================================
# Git files
# ===============================================================================
[.gitattributes]
end_of_line = lf

[.gitignore]
end_of_line = lf
